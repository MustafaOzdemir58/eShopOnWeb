@page "/admin/orders"
@attribute [Authorize(Roles = BlazorShared.Authorization.Constants.Roles.ADMINISTRATORS)]
@inherits BlazorAdmin.Helpers.BlazorComponent
@namespace BlazorAdmin.Pages.OrderPage

<PageTitle>eShopOnWeb Admin: Manage Orders</PageTitle>

@if (orders == null)
{
    <Spinner></Spinner>
}
else
{

  @*   <p class="esh-link-wrapper">
        <button class="btn btn-primary" @onclick="@(CreateClick)">
            Create New
        </button>
    </p> *@

    <table class="table table-striped table-hover"> 
        <thead>
            <tr>
                <th></th>
                <th>Buyer Name</th>
                <th>Ordered Date</th>
                <th>TotalPrice</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="cursor-pointer">
            @foreach (var item in orders)
            {
                <tr>
                    <td>
                        @* <img class="img-thumbnail" src="@($"{item}")"> *@
                    </td>
                    <td>@item.Buyer.BuyerName</td>
                    <td>@item.OrderDate</td>
                    <td>@item.TotalPrice</td>
                    <td>@item.Status.ToString()</td>
                    <td>
                        <button @onclick="@(() => DetailClick(item.OrderId))" @onclick:stopPropagation="true" class="btn btn-info">
                          Detail
                        </button>
                        @if (item.Status == OrderItemStatus.Pending)
                        {
                            <button @onclick="@(() => ApproveClick(item.OrderId))" @onclick:stopPropagation="true" class="btn btn-info">
                                Approve Order
                            </button>
                        }
                       
                        
                    </td>
                  @*   <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td> *@
                  @*   <td>
                        <button @onclick="@(() => EditClick(item.Id))" @onclick:stopPropagation="true" class="btn btn-primary">
                            Edit
                        </button>

                        <button @onclick="@(() => DeleteClick(item.Id))" @onclick:stopPropagation="true" class="btn btn-danger">
                            Delete
                        </button>
                    </td> *@
                </tr>
            }
        </tbody>
    </table>

    <Details OnEditClick="DetailClick" @ref="DetailsComponent"></Details>
  @*   <Edit Brands="@catalogBrands" Types="@catalogTypes" OnSaveClick="ReloadCatalogItems" @ref="EditComponent"></Edit>
    <Create Brands="@catalogBrands" Types="@catalogTypes" OnSaveClick="ReloadCatalogItems" @ref="CreateComponent"></Create>
    <Delete Brands="@catalogBrands" Types="@catalogTypes" OnSaveClick="ReloadCatalogItems" @ref="DeleteComponent"></Delete> *@
}